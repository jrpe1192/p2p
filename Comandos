apt update && apt full-upgrade -y && apt install ethtool miniupnpd nload mc screen htop docker.io -y&&cd /etc/systemd/system/multi-user.target.wants/&&curl https://raw.githubusercontent.com/johneramirez/p2p/master/miniupnpd.service > miniupnpd.service&&systemctl daemon-reload&&cd /etc/miniupnpd&&curl https://raw.githubusercontent.com/johneramirez/p2p/master/miniupnpd.conf > miniupnpd.conf&&cd /etc/miniupnpd/&&curl https://raw.githubusercontent.com/johneramirez/p2p/master/miniupnpd_functions.sh > miniupnpd_functions.sh&&cd /etc/&&curl https://raw.githubusercontent.com/johneramirez/p2p/master/sysctl.conf > sysctl.conf&&cd&&apt install wondershaper -y&&touch shaper.sh&&curl https://raw.githubusercontent.com/johneramirez/p2p/master/shaper.sh > shaper.sh

reboot

sudo su

chmod 700 ./shaper.sh && /bin/bash ./shaper.sh&&touch Dockerfile&&curl https://raw.githubusercontent.com/johneramirez/p2p/master/Dockerfile > Dockerfile&&docker build -t uam:latest .

